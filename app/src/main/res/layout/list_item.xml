<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/holder"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@color/itemColor">

    <ImageView
        android:id="@+id/image_main"
        android:layout_width="match_parent"
        android:layout_height="448dp"
        app:srcCompat="@drawable/movie_1_image" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_main"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="sans-serif-black"
            android:maxEms="14"
            android:padding="16dp"
            android:singleLine="true"
            android:text="@string/movie_1_name"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <com.like.LikeButton
            android:id="@+id/add_to_favor_toggle"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_gravity="end"
            android:layout_marginStart="-30dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@id/txt_name"
            app:anim_scale_factor="3"
            app:circle_end_color="@color/colorAccent"
            app:circle_start_color="@color/colorPrimary"
            app:dots_primary_color="@color/colorAccent"
            app:dots_secondary_color="@color/colorPrimary"
            app:icon_size="25dp"
            app:icon_type="Star"
            app:is_enabled="true"
            app:like_drawable="@drawable/ic_favorite"
            app:unlike_drawable="@drawable/ic_favorite_border" />
    </RelativeLayout>
</RelativeLayout>

